// ==UserScript==
// @name         Smart Dark Mode
// @namespace    http://tampermonkey.net/
// @version      2.1
// @description  Clean inversion-based dark mode â€“ pure black background, consistent toggle
// @match        *://*/*
// @grant        GM_addStyle
// @run-at       document-start
// ==/UserScript==

(function() {
    'use strict';

    // ========== SMART DARK MODE (Inversion Method) ==========
    const darkModeCSS = `
        /* Invert whole page, set html background to white so it inverts to pure black */
        html.dark-mode {
            filter: invert(1) hue-rotate(180deg) !important;
            background-color: #ffffff !important; /* inverts to #000000 (pure black) */
            color-scheme: dark !important;
        }

        /* Body transparent so html background shows */
        html.dark-mode body {
            background-color: transparent !important;
        }

        /* Revert images, videos, and other media */
        html.dark-mode img,
        html.dark-mode video,
        html.dark-mode iframe,
        html.dark-mode canvas,
        html.dark-mode svg,
        html.dark-mode [style*="background-image"] {
            filter: invert(1) hue-rotate(180deg) !important;
        }

        /* Custom scrollbar â€“ pure black/dark gray for consistency */
        html.dark-mode::-webkit-scrollbar {
            width: 14px !important;
            height: 14px !important;
            background-color: #000000 !important;
        }
        html.dark-mode::-webkit-scrollbar-track {
            background-color: #000000 !important;
        }
        html.dark-mode::-webkit-scrollbar-thumb {
            background-color: #333333 !important;
            border-radius: 7px !important;
            border: 3px solid #000000 !important;
        }
        html.dark-mode::-webkit-scrollbar-thumb:hover {
            background-color: #555555 !important;
        }

        /* Firefox scrollbar */
        html.dark-mode {
            scrollbar-color: #333333 #000000 !important;
            scrollbar-width: auto !important;
        }

        /* Keep toggle button appearance normal (doubleâ€‘invert) */
        html.dark-mode #smart-dark-mode-toggle {
            filter: invert(1) hue-rotate(180deg) !important;
        }
    `;

    GM_addStyle(darkModeCSS);

    // Toggle function
    function toggleDarkMode(enable) {
        if (enable) {
            document.documentElement.classList.add('dark-mode');
        } else {
            document.documentElement.classList.remove('dark-mode');
        }
    }

    // Start with dark mode on
    setTimeout(() => toggleDarkMode(true), 10);

    // ========== SIMPLE TOGGLE BUTTON ==========
    const toggle = document.createElement('div');
    toggle.id = 'smart-dark-mode-toggle';   // for doubleâ€‘invert rule
    toggle.innerHTML = 'ğŸŒ“';
    toggle.style.cssText = `
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 40px;
        height: 40px;
        background: #333;
        color: #fff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        cursor: pointer;
        z-index: 999999;
        border: 1px solid #555;
        box-shadow: 0 2px 8px rgba(0,0,0,0.5);
        opacity: 0.6;
        transition: opacity 0.2s;
        user-select: none;
    `;

    toggle.onmouseover = () => toggle.style.opacity = '1';
    toggle.onmouseout = () => toggle.style.opacity = '0.6';

    toggle.onclick = () => {
        const isDark = document.documentElement.classList.contains('dark-mode');
        toggleDarkMode(!isDark);
        toggle.innerHTML = !isDark ? 'ğŸŒ“' : 'â˜€ï¸';
    };

    // Append when body is ready
    function appendToggle() {
        if (document.body) {
            document.body.appendChild(toggle);
        } else {
            setTimeout(appendToggle, 50);
        }
    }
    appendToggle();

    console.log('ğŸŒ™ Smart Dark Mode active â€“ pure black background and stable toggle');
})();
